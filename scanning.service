[Unit]
Description=DO&CO Scanning Service
After=network-online.target sound.target
Wants=network-online.target

[Service]
Type=simple
User=pi
WorkingDirectory=/home/pi/DOCO/Scanning
Environment=PYTHONUNBUFFERED=1
ExecStart=/home/pi/DOCO/Scanning/virtualenv/bin/python /home/pi/DOCO/Scanning/main.py
Restart=on-failure
RestartSec=3
TimeoutStopSec=15

[Install]
WantedBy=multi-user.target
